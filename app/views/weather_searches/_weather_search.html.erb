<div id="<%= dom_id weather_search %>">

  <p>Address: <strong><%= weather_search.address %></strong></p>

  <ul>
    <%- weather_search.forecasts.each do |forecast| %>
      <li><%= image_tag forecast.icon, size: '30x30' %><%= forecast.name %> <%= forecast.temperature %><%= forecast.temperature_unit %></li>
      <hr />
    <% end %>
  </ul>
</div>
